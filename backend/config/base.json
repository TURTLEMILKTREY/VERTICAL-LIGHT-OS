{
  "version": "1.0",
  "system": {
    "name": "VERTICAL-LIGHT-OS",
    "version": "2.0.0",
    "environment_detection": {
      "auto_detect": true,
      "fallback_environment": "development"
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "handlers": {
      "console": {
        "enabled": true,
        "level": "INFO"
      },
      "file": {
        "enabled": true,
        "level": "DEBUG",
        "filename": "logs/application.log",
        "max_size_mb": 10,
        "backup_count": 5
      }
    }
  },
  "database": {
    "connection_pool": {
      "min_connections": 5,
      "max_connections": 20,
      "connection_timeout": 30
    },
    "retry_policy": {
      "max_retries": 3,
      "retry_delay": 1,
      "backoff_multiplier": 2
    }
  },
  "api": {
    "rate_limiting": {
      "requests_per_minute": 60,
      "burst_allowance": 10
    },
    "timeout": {
      "connect_timeout": 10,
      "read_timeout": 30,
      "total_timeout": 45
    },
    "retry_policy": {
      "max_retries": 3,
      "retry_delay": 2,
      "exponential_backoff": true
    }
  },
  "cache": {
    "default_ttl": 3600,
    "max_size": 10000,
    "cleanup_interval": 300
  },
  "security": {
    "encryption": {
      "algorithm": "AES-256-GCM",
      "key_rotation_days": 90
    },
    "api_keys": {
      "encryption_enabled": true,
      "expiry_days": 365
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "collection_interval": 60,
      "retention_days": 30
    },
    "alerts": {
      "enabled": true,
      "email_notifications": true,
      "slack_notifications": false
    }
  },
  "external_apis": {
    "default_timeout": 30,
    "max_retries": 3,
    "retry_delay": 2,
    "circuit_breaker": {
      "failure_threshold": 5,
      "recovery_timeout": 60,
      "half_open_max_calls": 3
    },
    "bloomberg": {
      "budget_trends_endpoint": "https://api.bloomberg.com/budget-trends",
      "industry_benchmarks_endpoint": "https://api.bloomberg.com/industry-benchmarks", 
      "economic_indicators_endpoint": "https://api.bloomberg.com/economic-data",
      "api_key": "test_bloomberg_key",
      "timeout": 30,
      "retry_count": 3
    },
    "google_ads": {
      "competitive_intelligence_endpoint": "https://api.googleads.com/competitive-data",
      "market_insights_endpoint": "https://api.googleads.com/market-insights",
      "api_key": "test_google_ads_key", 
      "timeout": 30
    }
  }
}
