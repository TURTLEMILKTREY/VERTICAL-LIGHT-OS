{
  "environment": "development",
  "debug": true,
  "database": {
    "host": "${DATABASE_HOST:-localhost}",
    "port": "${DATABASE_PORT:-5432}",
    "name": "${DATABASE_NAME:-vlos_dev}",
    "user": "${DATABASE_USER:-vlos_dev}",
    "password": "${DATABASE_PASSWORD:-dev_password}",
    "ssl": false,
    "pool_size": 10
  },
  "redis": {
    "host": "${REDIS_HOST:-localhost}",
    "port": "${REDIS_PORT:-6379}",
    "db": "${REDIS_DB:-0}",
    "password": "${REDIS_PASSWORD:-}",
    "timeout": 5
  },
  "external_apis": {
    "bloomberg": {
      "enabled": false,
      "base_url": "https://api.bloomberg.com/v1",
      "api_key": "${BLOOMBERG_API_KEY:-}",
      "timeout": 30,
      "rate_limit": {
        "requests_per_minute": 100,
        "burst": 20
      }
    },
    "google_ads": {
      "enabled": false,
      "client_id": "${GOOGLE_ADS_CLIENT_ID:-}",
      "client_secret": "${GOOGLE_ADS_CLIENT_SECRET:-}",
      "developer_token": "${GOOGLE_ADS_DEVELOPER_TOKEN:-}",
      "customer_id": "${GOOGLE_ADS_CUSTOMER_ID:-}",
      "api_version": "v13"
    },
    "facebook_marketing": {
      "enabled": false,
      "app_id": "${FACEBOOK_APP_ID:-}",
      "app_secret": "${FACEBOOK_APP_SECRET:-}",
      "access_token": "${FACEBOOK_ACCESS_TOKEN:-}",
      "api_version": "v18.0"
    }
  },
  "goal_parser": {
    "budget_thresholds": {
      "dynamic_calculation": true,
      "market_data_source": "internal_intelligence",
      "fallback_values": {
        "micro_threshold": 500,
        "small_threshold": 5000,
        "medium_threshold": 50000,
        "large_threshold": 500000,
        "enterprise_threshold": 2000000
      },
      "regional_multipliers": {
        "north_america": 1.2,
        "europe": 1.1,
        "asia_pacific": 0.9,
        "latin_america": 0.7,
        "africa": 0.6
      },
      "industry_multipliers": {
        "technology": 1.5,
        "healthcare": 1.3,
        "finance": 1.4,
        "manufacturing": 1.2,
        "retail": 0.9,
        "services": 1.0
      }
    },
    "performance_thresholds": {
      "success_threshold": 0.7,
      "learning_threshold": 0.6,
      "confidence_threshold": 0.8
    }
  },
  "campaign_generator": {
    "channel_performance": {
      "search_advertising": {
        "ctr_range": [0.02, 0.08],
        "cpc_range": [1.5, 8.0],
        "conversion_rate_range": [0.02, 0.12],
        "targeting_precision": 0.90
      },
      "social_media": {
        "ctr_range": [0.015, 0.06],
        "cpc_range": [0.8, 4.5],
        "conversion_rate_range": [0.015, 0.08],
        "targeting_precision": 0.85
      },
      "email_marketing": {
        "ctr_range": [0.18, 0.35],
        "cpc_range": [0.1, 0.5],
        "conversion_rate_range": [0.15, 0.30],
        "targeting_precision": 0.95
      }
    },
    "audience_channel_affinity": {
      "age_18_25": {
        "social_media": 0.95,
        "search_advertising": 0.75,
        "email_marketing": 0.60
      },
      "age_25_35": {
        "social_media": 0.90,
        "search_advertising": 0.85,
        "email_marketing": 0.75
      },
      "age_35_45": {
        "social_media": 0.80,
        "search_advertising": 0.90,
        "email_marketing": 0.85
      },
      "age_45_55": {
        "social_media": 0.70,
        "search_advertising": 0.85,
        "email_marketing": 0.90
      },
      "age_55_plus": {
        "social_media": 0.60,
        "search_advertising": 0.80,
        "email_marketing": 0.95
      }
    }
  },
  "logging": {
    "level": "DEBUG"
  },
  "monitoring": {
    "detailed_metrics": true,
    "performance_profiling": true
  }
}
