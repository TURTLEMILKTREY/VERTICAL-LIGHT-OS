{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Campaign Generator Configuration Schema",
  "type": "object",
  "properties": {
    "generation": {
      "type": "object",
      "properties": {
        "max_campaigns_per_request": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50
        },
        "concurrent_generation_threads": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 10,
          "maximum": 600
        }
      },
      "required": ["max_campaigns_per_request", "concurrent_generation_threads", "timeout_seconds"]
    },
    "channel_intelligence": {
      "type": "object",
      "properties": {
        "performance_cache_ttl_hours": {
          "type": "integer",
          "minimum": 1,
          "maximum": 24
        },
        "market_data_refresh_minutes": {
          "type": "integer",
          "minimum": 5,
          "maximum": 120
        },
        "competitive_analysis_cache_hours": {
          "type": "integer",
          "minimum": 1,
          "maximum": 48
        },
        "real_time_data": {
          "type": "boolean"
        }
      },
      "required": ["performance_cache_ttl_hours", "market_data_refresh_minutes"]
    },
    "channel_performance": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "properties": {
            "ctr_range": {
              "type": "array",
              "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "minItems": 2,
              "maxItems": 2
            },
            "cpc_range": {
              "type": "array",
              "items": {
                "type": "number",
                "minimum": 0
              },
              "minItems": 2,
              "maxItems": 2
            },
            "conversion_rate_range": {
              "type": "array",
              "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "minItems": 2,
              "maxItems": 2
            },
            "targeting_precision": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "required": ["ctr_range", "cpc_range", "conversion_rate_range", "targeting_precision"]
        }
      }
    },
    "audience_channel_affinity": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    },
    "optimization": {
      "type": "object",
      "properties": {
        "min_budget_threshold": {
          "type": "number",
          "minimum": 10
        },
        "max_budget_allocation": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 1
        },
        "optimization_reserve_percentage": {
          "type": "number",
          "minimum": 0.05,
          "maximum": 0.5
        },
        "performance_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "advanced_algorithms": {
          "type": "boolean"
        },
        "ml_optimization": {
          "type": "boolean"
        }
      },
      "required": ["min_budget_threshold", "max_budget_allocation", "optimization_reserve_percentage", "performance_threshold"]
    }
  },
  "required": ["generation", "channel_intelligence", "optimization"]
}
