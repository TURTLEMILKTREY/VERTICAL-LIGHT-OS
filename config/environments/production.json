{
  "_extends": "base.json",
  "_environment": "production",
  "_description": "Production environment configuration - optimized for performance and reliability",
  
  "system": {
    "environment": "production",
    "debug_mode": false,
    "verbose_logging": false
  },
  
  "cache": {
    "redis_url": "${REDIS_URL}",
    "default_ttl": 21600,
    "performance_ttl": 3600,
    "market_data_ttl": 7200,
    "learning_data_ttl": 86400,
    "max_memory_usage": "512MB",
    "compression_enabled": true,
    "cluster_mode": true,
    "redis_cluster_nodes": "${REDIS_CLUSTER_NODES}"
  },
  
  "api_integration": {
    "mock_mode": false,
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_backoff_multiplier": 2,
    "rate_limits": {
      "requests_per_minute": 2000,
      "burst_allowance": 500,
      "circuit_breaker_threshold": 3
    },
    "api_endpoints": {
      "google_ads": {
        "base_url": "https://googleads.googleapis.com/v14",
        "api_key": "${GOOGLE_ADS_API_KEY}",
        "developer_token": "${GOOGLE_ADS_DEVELOPER_TOKEN}",
        "customer_id": "${GOOGLE_ADS_CUSTOMER_ID}",
        "oauth2_client_id": "${GOOGLE_ADS_OAUTH2_CLIENT_ID}",
        "oauth2_client_secret": "${GOOGLE_ADS_OAUTH2_CLIENT_SECRET}",
        "oauth2_refresh_token": "${GOOGLE_ADS_OAUTH2_REFRESH_TOKEN}"
      },
      "facebook_marketing": {
        "base_url": "https://graph.facebook.com/v18.0",
        "access_token": "${FACEBOOK_ACCESS_TOKEN}",
        "app_id": "${FACEBOOK_APP_ID}",
        "app_secret": "${FACEBOOK_APP_SECRET}"
      },
      "world_bank": {
        "base_url": "https://api.worldbank.org/v2",
        "format": "json",
        "per_page": 1000
      },
      "semrush": {
        "base_url": "https://api.semrush.com",
        "api_key": "${SEMRUSH_API_KEY}",
        "database": "us"
      },
      "economic_intelligence": {
        "base_url": "https://api.economicdata.com/v1",
        "api_key": "${ECONOMIC_INTELLIGENCE_API_KEY}"
      }
    }
  },
  
  "dynamic_values": {
    "budget_classification": {
      "update_frequency_seconds": 21600,
      "sources": [
        {
          "name": "google_ads_intelligence",
          "weight": 0.5,
          "enabled": true,
          "priority": 1
        },
        {
          "name": "facebook_marketing_intelligence",
          "weight": 0.3,
          "enabled": true,
          "priority": 2
        },
        {
          "name": "industry_benchmarks_api",
          "weight": 0.2,
          "enabled": true,
          "priority": 3
        }
      ],
      "emergency_fallback_values": {
        "micro_threshold": 750,
        "small_threshold": 7500,
        "medium_threshold": 75000,
        "large_threshold": 750000,
        "enterprise_threshold": 3000000
      }
    },
    
    "industry_multipliers": {
      "update_frequency_seconds": 86400,
      "sources": [
        {
          "name": "economic_intelligence_api",
          "weight": 0.6,
          "enabled": true,
          "priority": 1
        },
        {
          "name": "world_bank_api",
          "weight": 0.2,
          "enabled": true,
          "priority": 2
        },
        {
          "name": "competitive_analysis_api",
          "weight": 0.2,
          "enabled": true,
          "priority": 3
        }
      ],
      "emergency_fallback_values": {
        "technology": 1.4,
        "healthcare": 1.2,
        "finance": 1.5,
        "manufacturing": 1.1,
        "retail": 1.0,
        "services": 1.1,
        "education": 0.9,
        "nonprofit": 0.8,
        "automotive": 1.2,
        "real_estate": 1.3
      }
    },
    
    "channel_performance": {
      "update_frequency_seconds": 3600,
      "sources": [
        {
          "name": "google_ads_api",
          "channels": ["search_advertising"],
          "weight": 0.9,
          "enabled": true,
          "priority": 1
        },
        {
          "name": "facebook_marketing_api",
          "channels": ["social_media"],
          "weight": 0.9,
          "enabled": true,
          "priority": 1
        },
        {
          "name": "linkedin_ads_api",
          "channels": ["professional_social"],
          "weight": 0.8,
          "enabled": true,
          "priority": 2
        },
        {
          "name": "email_intelligence_api",
          "channels": ["email_marketing"],
          "weight": 0.95,
          "enabled": true,
          "priority": 1
        }
      ]
    },
    
    "regional_factors": {
      "update_frequency_seconds": 86400,
      "sources": [
        {
          "name": "world_bank_api",
          "weight": 0.7,
          "enabled": true,
          "priority": 1
        },
        {
          "name": "imf_api",
          "weight": 0.3,
          "enabled": true,
          "priority": 2
        }
      ],
      "regions": [
        "north_america",
        "europe",
        "asia_pacific",
        "latin_america",
        "africa",
        "middle_east",
        "oceania"
      ]
    }
  },
  
  "learning_system": {
    "enabled": true,
    "pattern_storage": "database",
    "database_url": "${DATABASE_URL}",
    "memory_limit": "256MB",
    "learning_weights": {
      "recent_data_weight": 0.6,
      "historical_data_weight": 0.4,
      "minimum_samples": 15,
      "confidence_threshold": 0.8
    },
    "adaptation": {
      "min_adjustment": 0.05,
      "max_adjustment": 1.5,
      "learning_rate": 0.03,
      "decay_factor": 0.98
    },
    "backup": {
      "enabled": true,
      "frequency_hours": 6,
      "retention_days": 90
    }
  },
  
  "monitoring": {
    "enabled": true,
    "log_level": "WARN",
    "console_output": false,
    "file_output": true,
    "log_file_path": "/var/log/vertical-light-os/production.log",
    "log_rotation": true,
    "log_max_size": "100MB",
    "log_max_files": 10,
    "metrics_collection": true,
    "performance_tracking": true,
    "error_reporting": true,
    "apm_integration": {
      "enabled": true,
      "service_name": "vertical-light-os",
      "apm_server_url": "${APM_SERVER_URL}",
      "secret_token": "${APM_SECRET_TOKEN}"
    },
    "alerts": {
      "api_failure_threshold": 2,
      "performance_degradation_threshold": 0.15,
      "cache_miss_rate_threshold": 0.9,
      "memory_usage_threshold": 0.8,
      "response_time_threshold_ms": 2000
    }
  },
  
  "security": {
    "api_key_rotation_days": 90,
    "request_encryption": true,
    "data_encryption_at_rest": true,
    "audit_logging": true,
    "ip_whitelist_enabled": true,
    "allowed_ips": ["${PRODUCTION_ALLOWED_IPS}"],
    "ssl_verification": true,
    "security_headers": true,
    "rate_limiting_per_ip": {
      "enabled": true,
      "requests_per_minute": 100,
      "burst_allowance": 20
    }
  },
  
  "performance": {
    "max_concurrent_api_calls": 100,
    "database_connection_pool_size": 20,
    "request_timeout_ms": 30000,
    "memory_optimization": true,
    "async_processing": true,
    "connection_pooling": true,
    "query_optimization": true,
    "caching_strategy": "aggressive"
  },
  
  "backup": {
    "enabled": true,
    "database_backup": {
      "frequency": "daily",
      "retention_days": 30,
      "compression": true
    },
    "configuration_backup": {
      "frequency": "hourly",
      "retention_hours": 168
    },
    "learning_data_backup": {
      "frequency": "daily",
      "retention_days": 90
    }
  }
}
